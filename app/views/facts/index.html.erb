<p id="notice"><%= notice %></p>

<h1>Listing Facts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Preview</th>
      <th>Body</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facts.each do |fact| %>
      <tr>
        <td><%= fact.title %></td>
        <td><%= fact.preview %></td>
        <td><%= fact.body %></td>
        <td><%= fact.picture %></td>
        <td><%= link_to 'Show', fact %></td>
        <td><%= link_to 'Edit', edit_fact_path(fact) %></td>
        <td><%= link_to 'Destroy', fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

