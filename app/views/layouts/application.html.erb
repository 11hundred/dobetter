		<ul id="nav">
			<li><span></span><a href="/whats-the-issue">What is the issue?</a></li>
			<li><span></span><a href="/get-involved">Get Involved</a></li>
		</ul>
	</div>	
<% elsif current_page?('/whats-the-issue') %>
	<div class="interior-wrapper">
		<ul id="nav">
			<li><span></span><a href="/">Who are We?</a></li>
			<li class="active"><span></span><a href="/whats-the-issue">What is the issue?</a></li>
			<li><span></span><a href="/get-involved">Get Involved</a></li>
		</ul>
	
	</div>	
<% elsif current_page?('/get-involved') %>
	<div class="interior-wrapper">
		<ul id="nav">
	<li><span></span><a href="/">Who are We?</a></li>
			<li><span></span><a href="/whats-the-issue">What is the issue?</a></li>
			<li><span></span><a href="/get-involved">Get Involved</a></li>
		</ul>
	
	</div>	
<% elsif current_page?('/facts') %>
	<div class="interior-wrapper">
	<p><span><%= @who.title %></span><%= @who.body %></p>	
